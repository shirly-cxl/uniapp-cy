.page-fill{
	width: 100%;
	height: 100%;
	position: absolute;
}
.info-list{
	background-color: #FFFFFF;
	padding: 0 30rpx 0rpx 30rpx;
}
.info-words{
	color: #333333;
	font-size: 16px;
	width: 25%;
	line-height: 80rpx;
}
.item-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.face-line-upbottom{
	margin-top: 20rpx;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}
.face{
	width: 80rpx;
	height: 80rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.arrow{
	margin-left: 20rpx;
	line-height: 86rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.arrow-ico{
	width: 30rpx;
	height: 30rpx;
}
.right-wapper{
	width: 80%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.line{
	height: 1px;
	background-color: #DBDBDA;
}
.footer-wapper{
	position: fixed;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	width: 100%;
}
.footer-words{
	text-align: center;
	background-color: white;
	padding: 20rpx;
	color: #333333;
	font-size: 16px;
}

