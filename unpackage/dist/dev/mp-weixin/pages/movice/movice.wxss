.player{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.movice{
	width: 100%;
	height: 440rpx;
}
.info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
	padding: 40rpx 20rpx;
}
.img{
	width: 280rpx;
	height: 380rpx;
}
.desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{
	font-size: 20px;
}
.basic{
	padding: 5rpx 0;
	color: darkgray;
	font-size: 15px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.score{
	background-color: #fff;
	margin-top: 20rpx;
	width: 360rpx;
	padding: 16rpx 16rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-shadow:3px 2px 10px #dedede ;
	        box-shadow:3px 2px 10px #dedede ;
	-webkit-border-radius: 5%;
	        border-radius: 5%;
}
.words{
	font-size: 16px;
	color: grey;
}
.number{
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #FEAB2A;
	line-height: 60rpx;
}
.score-stars{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	margin-left: 10rpx;
}
.stars{
	width: 40rpx; 
	height: 40rpx;
}
.thumb{
	font-size: 12px;
	color: grey;
	line-height: 44rpx;
}
.plots{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.plots-title{
	color: #A9A9A9;
	font-size: 15px;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 18px;
}
.scroll{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
	/* display: flex;
	flex-direction: column; */
}
.scroll-list{
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-img{
	width: 220rpx;
	height: 320rpx;
	margin-right: 15rpx;
}
.actor-wapper{
	display: inline-block;
}
.actor{
	width: 170rpx;
	height: 240rpx;
	margin-right: 15rpx;
}
.actor-name{
	width: 170rpx;
	text-align: center;
	font-size: 16px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.actor-role{
	width: 170rpx;
	text-align: center;
	font-size: 14px;
	color: #A9A9A9;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

